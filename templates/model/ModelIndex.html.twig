{% extends 'base.html.twig' %}

{% block title %}View Categories!{% endblock %}

{% block body %}
<div class="container-fluid">
    <br>
    <div class="col text-center">
		<h2>MODEL MANAGE</h2>
	</div>
<a class="btn btn-primary" href="{{ path ('modelCreate') }}">Create New Category</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Size</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Made_in</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
    {% for model in Models %}
        <tr>
            <td scope="row">{{ model.Name }}</td>
            <td scope="row">{{ model.Size }}</td>
            <td scope="row">{{ model.Category }}</td>
            <td scope="row">{{ model.Description }}</td>
            <td scope="row">{{ model.Price }}</td>
            <td scope="row">{{ model.MadeIn }}</td>
            <td scope="row">                
                <img src="{{ asset ('images/' ~ model.Image) }}" width="300px" height="400px">
            </td>
            <td scope="row"> 
                <a class="btn btn-warning" href="{{ path ( 'modelDetail' , {'id' : model.id } ) }}">Detail</a>
                <a class="btn btn-warning" href="{{ path ( 'modelUpdate' , {'id' : model.id } ) }}">Update</a>
                <a class="btn btn-danger" href="{{ path ( 'modelDelete' , {'id' : model.id } ) }}"
                                          onclick = "return confirm('Are you sure to delete ?')"
                >Delete</a>
            </td>
        </tr> 
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
